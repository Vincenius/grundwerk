---
import Layout from "../../layouts/Layout.astro";
import Footer from "../../components/Footer.astro";
import { Image } from "astro:assets";
import header from "../../assets/products-bg.jpg";
import Navbar from "../../components/Navbar.astro";
import { products } from "../../data/products";
const product = products[0]; // todo find by slug

// https://www.lightgalleryjs.com/
---

<Layout>
  <header class="relative">
    <Navbar />
    <div class="header-bg absolute z-[-1]">
      <img src={product.image} alt={product.name} />
    </div>
    <h1 class="text-6xl font-thin">{product.name}</h1>
  </header>

  <main class="bg-white my-10 h-full py-6 sm:py-8 lg:py-12">
    <h2 class="text-3xl text-center mb-4">Hier kommen dann Details</h2>
  </main>

  <Footer />
</Layout>
<style>
  header {
    height: 100%;
    min-height: 50vh;
  }

  .header-bg img {
    object-position: center;
  }
  .header-bg::after {
    content: "";
    opacity: 0.8;
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    background: #fff;
  }
</style>
